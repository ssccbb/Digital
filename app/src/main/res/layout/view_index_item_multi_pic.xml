<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <include
        layout="@layout/view_index_item_head"/>

    <LinearLayout
        android:id="@+id/rl_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_content_img_1"
                android:scaleType="centerCrop"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="160dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/default_item"/>

            <ImageView
                android:id="@+id/iv_content_img_2"
                android:scaleType="centerCrop"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="160dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/default_item"/>
        </LinearLayout>

        <TextView
            android:text="一篇典型的surface book 使用体会一篇典型的surface book 使用体会一篇典型的surface book 使用体会"
            android:id="@+id/tv_content_tittle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/black"
            android:maxLines="2"
            android:ellipsize="end"/>
    </LinearLayout>

    <include
        layout="@layout/view_index_item_foot"/>

</LinearLayout>